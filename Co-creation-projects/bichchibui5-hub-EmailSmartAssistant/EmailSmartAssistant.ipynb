    "class InformationExtractor:\n",
    "    def __init__(self):\n",
    "        # æ—¶é—´ç›¸å…³çš„æ­£åˆ™è¡¨è¾¾å¼\n",
    "        self.date_patterns = [\n",
    "            r'\\d{4}[-/]\\d{1,2}[-/]\\d{1,2}',  # 2024-01-01 æˆ– 2024/01/01\n",
    "            r'\\d{1,2}[-/]\\d{1,2}[-/]\\d{4}',  # 01-01-2024 æˆ– 01/01/2024\n",
    "            r'\\d{1,2}æœˆ\\d{1,2}æ—¥',           # 1æœˆ1æ—¥\n",
    "            r'\\d{1,2}/\\d{1,2}',              # 1/1\n",
    "        ]\n",
    "        \n",
    "        # æ—¶é—´ç›¸å…³çš„å…³é”®è¯\n",
    "        self.time_keywords = [\n",
    "            'æˆªæ­¢', 'deadline', 'åˆ°æœŸ', 'å®Œæˆæ—¶é—´', 'äº¤ä»˜æ—¶é—´',\n",
    "            'ä¼šè®®æ—¶é—´', 'çº¦å®šæ—¶é—´', 'é¢„å®š', 'å®‰æ’åœ¨'\n",
    "        ]\n",
    "        \n",
    "        # å¾…åŠäº‹é¡¹å…³é”®è¯\n",
    "        self.todo_keywords = [\n",
    "            'éœ€è¦', 'è¯·', 'è¦æ±‚', 'å®Œæˆ', 'å¤„ç†', 'å‡†å¤‡',\n",
    "            'need', 'please', 'require', 'complete', 'prepare'\n",
    "        ]\n",
    "    \n",
    "    def extract_dates(self, text):\n",
    "        \"\"\"æå–æ–‡æœ¬ä¸­çš„æ—¥æœŸ\"\"\"\n",
    "        dates = []\n",
    "        \n",
    "        # ä½¿ç”¨æ­£åˆ™è¡¨è¾¾å¼æå–æ—¥æœŸ\n",
    "        for pattern in self.date_patterns:\n",
    "            matches = re.findall(pattern, text)\n",
    "            dates.extend(matches)\n",
    "        \n",
    "        # ä½¿ç”¨dateparserè§£ææ›´å¤æ‚çš„æ—¥æœŸè¡¨è¾¾\n",
    "        sentences = text.split('ã€‚')\n",
    "        for sentence in sentences:\n",
    "            if any(keyword in sentence for keyword in self.time_keywords):\n",
    "                parsed_date = dateparser.parse(sentence)\n",
    "                if parsed_date:\n",
    "                    dates.append(parsed_date.strftime('%Y-%m-%d'))\n",
    "        \n",
    "        return list(set(dates))  # å»é‡\n",
    "    \n",
    "    def extract_todos(self, text):\n",
    "        \"\"\"æå–å¾…åŠäº‹é¡¹\"\"\"\n",
    "        todos = []\n",
    "        sentences = text.split('ã€‚')\n",
    "        \n",
    "        for sentence in sentences:\n",
    "            if any(keyword in sentence for keyword in self.todo_keywords):\n",
    "                # æ¸…ç†å¥å­\n",
    "                clean_sentence = sentence.strip()\n",
    "                if len(clean_sentence) > 5:  # è¿‡æ»¤å¤ªçŸ­çš„å¥å­\n",
    "                    todos.append(clean_sentence)\n",
    "        \n",
    "        return todos\n",
    "    \n",
    "    def extract_contacts(self, text):\n",
    "        \"\"\"æå–è”ç³»äººä¿¡æ¯\"\"\"\n",
    "        contacts = {\n",
    "            'emails': [],\n",
    "            'phones': []\n",
    "        }\n",
    "        \n",
    "        # æå–é‚®ç®±åœ°å€\n",
    "        email_pattern = r'\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b'\n",
    "        contacts['emails'] = re.findall(email_pattern, text)\n",
    "        \n",
    "        # æå–ç”µè¯å·ç \n",
    "        phone_patterns = [\n",
    "            r'1[3-9]\\d{9}',  # ä¸­å›½æ‰‹æœºå·\n",
    "            r'\\d{3}-\\d{4}-\\d{4}',  # æ ¼å¼åŒ–ç”µè¯\n",
    "            r'\\(\\d{3}\\)\\s*\\d{3}-\\d{4}'  # ç¾å¼ç”µè¯æ ¼å¼\n",
    "        ]\n",
    "        \n",
    "        for pattern in phone_patterns:\n",
    "            contacts['phones'].extend(re.findall(pattern, text))\n",
    "        \n",
    "        return contacts\n",
    "    \n",
    "    def generate_summary(self, email_data):\n",
    "        \"\"\"ç”Ÿæˆé‚®ä»¶æ‘˜è¦\"\"\"\n",
    "        subject = email_data['subject']\n",
    "        body = email_data['body']\n",
    "        sender = email_data['sender']\n",
    "        \n",
    "        # æå–å…³é”®ä¿¡æ¯\n",
    "        dates = self.extract_dates(body)\n",
    "        todos = self.extract_todos(body)\n",
    "        contacts = self.extract_contacts(body)\n",
    "        \n",
    "        # ç”Ÿæˆæ‘˜è¦\n",
    "        summary = {\n",
    "            'subject': subject,\n",
    "            'sender': sender,\n",
    "            'key_dates': dates,\n",
    "            'todo_items': todos[:3],  # æœ€å¤š3ä¸ªå¾…åŠäº‹é¡¹\n",
    "            'contacts': contacts,\n",
    "            'body_preview': body[:200] + '...' if len(body) > 200 else body\n",
    "        }\n",
    "        \n",
    "        return summary\n",
    "\n",
    "print(\"âœ… ä¿¡æ¯æå–å™¨å®šä¹‰å®Œæˆ\")"
